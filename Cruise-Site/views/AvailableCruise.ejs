<head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Available Cruises</title>
  <% include divs/head %>
    <script>
        function preload() {


            var preld = document.getElementById('loading');
            preld.style.display = 'none';
        }

    </script>
</head>
<body onload="preload()">
      <div id="loading">

    </div>

    <% include divs/navbar %>
    <section class="hero-wrap hero-wrap-2 " style="background-image: url('/assets/images/247937.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
          <div class="col-md-9 ftco-animate pb-5 text-center">
            <h1 class="mb-3 bread">Available Cruises</h1>
            <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cruises <i class="ion-ios-arrow-forward"></i></span></p>
          </div>
        </div>
      </div>
    </section>

          <section class="ftco-section ftco-no-pb ftco-no-pt">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="search-wrap-1 ftco-animate p-4">
              <form action="/users/index" method="POST" class="search-property-1">
                <div class="row">
                  <div class="col-lg align-items-end">
                    <div class="form-group">
                      <label for="#">Destination</label>
                      <div class="form-field">
                        <div class="icon"><span class="icon-directions_boat"></span></div>
                        <!--<input type="text" class="form-control" placeholder="Hotel &amp; Restaurant">-->
                      <select name="destination" id="destination_result" class="form-control"  required>
                          <option value="All Destination" >Destination</option>
                          <% for(var i=0 ; i < mapData.dePort.length ; i++){ %>
                          <option > <%= mapData.dePort[i] %></option>
                          <%}%>

                    </select>

                      </div>
                    </div>
                  </div>
                  <div class="col-lg align-items-end">
                    <div class="form-group">
                      <label for="#">Depature Port</label>
                      <div class="form-field">
                        <div class="icon"><span class="icon-directions_boat"></span></div>
                        <!--<input type="text" class="form-control checkin_date" placeholder="Check In Date">-->

                               <select name="cruiseName" id="Depature Port" class="form-control"  required style="color:black">
                          <option value="All Depature port" >Available Cruise</option>
                          <% for(var i=0 ; i < mapData.cruises.length ; i++){ %>
                          <option > <%= mapData.cruises[i] %></option>
                          <%}%>

                    </select>


                      </div>
                    </div>
                  </div>
                  <div class="col-lg align-items-end">
                    <div class="form-group">
                      <label for="#">Check-out date</label>
                      <div class="form-field">
                        <div class="icon"><span class="ion-ios-calendar"></span></div>
                        <input type="text" name="date" class="form-control checkout_date" placeholder="Check Out Date" style="color:black">
                      </div>
                    </div>
                  </div>
                  <div class="col-lg align-items-end">
                    <div class="form-group">
                      <label for="#">Num of Persons</label>
                      <div class="form-field">
                        <div class="select-wrap">
                          <div class="icon"><span class="icon-people"></span></div>
                         <input type="number" name="numP" class="form-control" placeholder="Num of Persons" min="1"/>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg align-self-end">
                    <div class="form-group">
                      <div class="form-field">
                        <input type="submit" value="Search" class="form-control btn btn-primary">
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>



    <section class="ftco-section bg-light">
      <div class="container">
        <div class="row d-flex">

<!-- for loop start -->
<% for(var i=0 ; i < filteredData.length ; i++){ %>
<form action="/users/all-cruises" method="post">
          <div class="booking-form panel-body ftco-animate">

            <h3 name="cruiseTitle" class="page-header heading"><%= filteredData[i].cruiseTitle %></h3>
            <input type="hidden" name="cruiseTitle" value="<%= filteredData[i].cruiseTitle %>" />
          <div class="row">
             <div class="col-lg-6">
             <img class="block-20" src=<%= filteredData[i].imgName %> />
            </div>
            <div class="col-lg-4 col-lg-offset-1 panel-body">

                <table>
                    <tbody>
                        <tr>
                              <td>Cruise Line :</td>
                                 <td name="dsd"><%= filteredData[i].cruiseName %>
                                 <input type="hidden" name="cruiseName" value="<%= filteredData[i].cruiseName %>" />
                                 </td>
                        </tr>


                        <tr>
                              <td>Ship Name :</td>
                                 <td><%= filteredData[i].shipName %>
                                 </td>
                        </tr>


                        <tr>
                              <td>Sailing Name :<%=filteredData[i].sailName %></td>
                                 <td></td>
                        </tr>


                        <tr>
                              <td>Depature port :</td>
                                 <td><%= filteredData[i].dePort %></td>
                        </tr>


                        <tr>
                              <td>Cruise Duration :</td>
                                 <td><%= filteredData[i].cruiseDur %></td>
                        </tr>

                        <tr>
                              <td>Price:</td>
                                 <td><%= filteredData[i].prices %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
           </div>
                   <hr />
            <div class="container">
                <p>
                 Experience life on a cruise across Alleppey's calm waters. Sit back, sip your drink and
                 look out at the soft ripples, the tall coconut trees and the changing colours of the sky as the
                 sun rises and sets.  </p>
                <button type="submit" class="btn btn-primary" style="float:right;margin-right:100px;">Select</button>
            </div>

           </div>
<!-- end of for loop...  -->
</form>
           <%}%>
        </div>
                <div class="col-md-4 d-flex ftco-animate">

          </div>
        </div>
          </div>
    </section>


    <% include divs/topScrollBtn %>
         <!--footer area-->
    <% include divs/footer %>

<% include divs/lib %>

</body>
